<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>DotCloth</AssemblyName>
    <RootNamespace>DotCloth</RootNamespace>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>DotCloth</PackageId>
    <Version>1.0.0-alpha.1</Version>
    <Authors>DotCloth Team</Authors>
    <Description>High-performance, UnityCloth-concept compatible XPBD cloth simulation library for .NET 9.0. Deterministic, thread-safe API with tests and CI.</Description>
    <PackageTags>cloth;PBD;XPBD;UnityCloth;simulation;physics</PackageTags>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <EnablePackageValidation>true</EnablePackageValidation>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>
  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>
</Project>
